<countries>
<% items.forEach(function (item) { %>
    <<%= item.team %>>
        <pj><%= item.matches %></pj>
        <pg><%= item.wins %></pg>
        <pe><%= item.ties %></pe>
        <pp><%= item.losts %></pp>
        <gf><%= item.goals %></gf>
        <gc><%= item.owngoals %></gc>
        <% if (item.nextmatch) { %>
        <rival><%= item.nextmatch.local == item.team ? item.nextmatch.away : item.nextmatch.local %></rival>
        <local><%= item.nextmatch.local == item.team ? 'Yes': 'No' %></local>
        <estadio><%= item.nextmatch.venue %></estadio>
        <fecha><%= item.nextmatch.date %></fecha>
        <hora><%= item.nextmatch.time %></hora>
        <% } %>
        <octavos><%= item.secondround %></octavos>
        <cuartos><%= item.quarterfinals %></cuartos>
        <semi><%= item.semifinals %></semi>
        <final><%= item.finals %></final>
    </<%= item.team %>>
<% }); %>
</countries>